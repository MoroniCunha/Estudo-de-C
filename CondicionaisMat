#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

void main(){
setlocale(LC_ALL,"");
//Definindo valores das variaveis

int a = 5, b = 10, c = 15;
//Pode se usar estas condionais para variaveis tipo CHAR também
char letra = 'b';
//Condicional maior
if (a>2)
{
    printf ("\n %d é maior que 2", a );
}
//Maior ou igual
if (c>=b)
{
    printf("\n %d é maior igual a %d",c,b);
}
//Menor
if (b<c)
{
    printf("\n %d é menor que %d",b,c);
}
//Menor igual
if (a<=c)
{
    printf("\n %d é menor igual que %d",a,c);
}
//Diferente
if (c!=10)
{
    printf("\n %d é diferente de 10",c);
}
//Usando condicional para letras
if (letra=='x')
{
    printf("\n %c é igual a x",letra);
}
else
{
    printf("\n %c não é igual a x",letra);
}
}
