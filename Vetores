#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#define TAM 3

void main(){
setlocale(LC_ALL,"");
printf("Aprendendo vetores\n");
int vetor[TAM],cont;
vetor[0]=5;
vetor[1]=10;
vetor[2]=15;

printf("\nPosição do vetor 0: %d",vetor[0]);
printf("\nPosição do vetor 1: %d",vetor[1]);
printf("\nPosição do vetor 2: %d \n",vetor[2]);

printf("\nLaço FOR para informar vetores\n");
for(cont=0;cont<TAM;cont++){
    printf("\nPosição do vetor %d: %d",cont,vetor[cont]);
}
printf("\n \nLendo valores para o vetor\n");
for(cont=0;cont<TAM;cont++){
    scanf("%d", &vetor[cont]);
}
for(cont=0;cont<TAM;cont++){
    printf("\nPosição do vetor %d: %d",cont,vetor[cont]);}
}
