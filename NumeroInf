#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <time.h>

void main(){
setlocale(LC_ALL,"");
//Responsavel por alimentar a rand de forma diferente
srand((unsigned)time(NULL));
//Variavel que recebe o resto da divisão por 3 (aleatorio entre 0 e 2)
int aleatorio = rand() % 3;
printf("%d",aleatorio);
//Variavel que recebe o resto da divisão por 5 (aleatorio entre 1 e 5)
int aleatoriose = (rand() % 5) + 1;
printf("%d",aleatoriose);
system("pause");
}
